<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch06.Ch06TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/sampleTestBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SampleBtn1"/>
        <Button
            android:id="@+id/sampleTestBtn2"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SampleBtn2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sampleTestBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SampleBtn3"/>
            <Button
                android:id="@+id/sampleTestBtn4"
                android:layout_width="300dp"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content"
                android:text="SampleBtn4"
                android:backgroundTint="#2196F3"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>